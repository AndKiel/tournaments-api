{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "file:/tournament_extended.json",
  "type": "object",
  "required": [
    "tournament"
  ],
  "properties": {
    "tournament": {
      "type": "object",
      "required": [
        "competitors",
        "competitors_limit",
        "description",
        "id",
        "name",
        "organiser_id",
        "result_names",
        "rounds",
        "starts_at",
        "status"
      ],
      "properties": {
        "competitors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "created_at",
              "id",
              "name",
              "status",
              "user_id"
            ],
            "properties": {
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "id": {
                "type": "string",
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
              },
              "name": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "user_id": {
                "type": [
                  "string",
                  "null"
                ],
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
              }
            }
          }
        },
        "competitors_limit": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "name": {
          "type": "string"
        },
        "organiser_id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "result_names": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "rounds": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "competitors_limit",
              "created_at",
              "id",
              "tables_count"
            ],
            "properties": {
              "competitors_limit": {
                "type": "integer"
              },
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "id": {
                "type": "string",
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
              },
              "players": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "competitor_id",
                    "id",
                    "result_values",
                    "table_number"
                  ],
                  "properties": {
                    "competitor_id": {
                      "type": "string",
                      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                    },
                    "id": {
                      "type": "string",
                      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                    },
                    "result_values": {
                      "type": "array",
                      "items": {
                        "type": "integer"
                      }
                    },
                    "table_number": {
                      "type": "integer"
                    }
                  }
                }
              },
              "tables_count": {
                "type": "integer"
              }
            }
          }
        },
        "starts_at": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string"
        }
      }
    }
  }
}
