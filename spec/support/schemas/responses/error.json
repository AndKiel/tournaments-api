{
  "$schema": "https://json-schema.org/draft-06/schema",
  "id": "file:/responses/error.json#",
  "type": "object",
  "required": [
    "error",
    "error_description"
  ],
  "properties": {
    "error": {
      "type": "string",
      "enum": [
        "forbidden",
        "invalid_params",
        "invalid_token",
        "unsupported_grant_type"
      ]
    },
    "error_description": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "enum": [
        "unauthorized"
      ]
    }
  }
}
